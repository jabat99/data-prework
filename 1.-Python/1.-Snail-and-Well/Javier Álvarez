Variables
well_height = 125
daily_advance = 30
night_retreat = 20
accumulated_distance = 0
days_accum = 0
Condición
while accumulated_distance < well_height:
days_accum += 1
accumulated_distance += daily_advance - night_retreat
print ("Día: ",days_accum, "Avance: ",accumulated_distance, "cm")
